<div class="layout layout--row layout--center">
  <div class="meal-grid">
    <!-- Header row -->
    <div class="grid-header">
      <div class="grid-cell">Meal</div>
      <div class="grid-cell">Monday</div>
      <div class="grid-cell">Tuesday</div>
      <div class="grid-cell">Wednesday</div>
      <div class="grid-cell">Thursday</div>
      <div class="grid-cell">Friday</div>
      <div class="grid-cell">Saturday</div>
      <div class="grid-cell">Sunday</div>
    </div>

    <!-- Breakfast row -->
    <div class="grid-row">
      <div class="grid-cell">Breakfast</div>
      <div class="grid-cell">{{0.Breakfast | default: ""}}</div>
      <div class="grid-cell">{{1.Breakfast | default: ""}}</div>
      <div class="grid-cell">{{2.Breakfast | default: ""}}</div>
      <div class="grid-cell">{{3.Breakfast | default: ""}}</div>
      <div class="grid-cell">{{4.Breakfast | default: ""}}</div>
      <div class="grid-cell">{{5.Breakfast | default: ""}}</div>
      <div class="grid-cell">{{6.Breakfast | default: ""}}</div>
    </div>

    <!-- Lunch row -->
    <div class="grid-row">
      <div class="grid-cell">Lunch</div>
      <div class="grid-cell">{{0.Lunch | default: ""}}</div>
      <div class="grid-cell">{{1.Lunch | default: ""}}</div>
      <div class="grid-cell">{{2.Lunch | default: ""}}</div>
      <div class="grid-cell">{{3.Lunch | default: ""}}</div>
      <div class="grid-cell">{{4.Lunch | default: ""}}</div>
      <div class="grid-cell">{{5.Lunch | default: ""}}</div>
      <div class="grid-cell">{{6.Lunch | default: ""}}</div>
    </div>

    <!-- Kid Lunch row -->
    <div class="grid-row">
      <div class="grid-cell">Kid Lunch</div>
      <div class="grid-cell">{{0.KidLunch | default: ""}}</div>
      <div class="grid-cell">{{1.KidLunch | default: ""}}</div>
      <div class="grid-cell">{{2.KidLunch | default: ""}}</div>
      <div class="grid-cell">{{3.KidLunch | default: ""}}</div>
      <div class="grid-cell">{{4.KidLunch | default: ""}}</div>
      <div class="grid-cell">{{5.KidLunch | default: ""}}</div>
      <div class="grid-cell">{{6.KidLunch | default: ""}}</div>
    </div>

    <!-- Dinner row -->
    <div class="grid-row">
      <div class="grid-cell">Dinner</div>
      <div class="grid-cell">{{0.Dinner | default: ""}}</div>
      <div class="grid-cell">{{1.Dinner | default: ""}}</div>
      <div class="grid-cell">{{2.Dinner | default: ""}}</div>
      <div class="grid-cell">{{3.Dinner | default: ""}}</div>
      <div class="grid-cell">{{4.Dinner | default: ""}}</div>
      <div class="grid-cell">{{5.Dinner | default: ""}}</div>
      <div class="grid-cell">{{6.Dinner | default: ""}}</div>
    </div>
  </div>
</div>

<style>
  .layout {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .meal-grid {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(5, 1fr);
    gap: 1px;
    border: 1px solid #ccc;
    width: 100%;
    height: 100%;
    flex: 1;
  }

  .grid-header {
    display: contents;
  }

  .grid-header .grid-cell {
    background-color: #f0f0f0;
    font-weight: bold;
    padding: 8px;
    text-align: center;
    border-bottom: 2px solid #ccc;
  }

  .grid-row {
    display: contents;
  }

  .grid-cell {
    padding: 8px;
    text-align: center;
    border: 1px solid #ddd;
    min-height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .grid-row:nth-child(even) {
    background-color: #f9f9f9;
  }

  .grid-row:nth-child(odd) {
    background-color: #ffffff;
  }
</style>

<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
  <span class="instance">{{today.TodayDate | default: "Today"}}</span>
</div>